<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studentmanagersystem"
    android:versionCode="1"
    android:versionName="1.0" >

     <uses-permission android:name="android.permission.CALL_PHONE" />
      <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/studentm"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.studentmanagersystem.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/mystyle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.studentmanagersystem.StudentInformationManagerActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            
        </activity>
        <activity
            android:name="com.example.studentmanagersystem.AddStudentActivity"
            android:label="@string/app_name"
            android:theme="@style/mystyle" >
            
        </activity>
        <activity
            android:name="com.example.studentmanagersystem.UserManage"
            android:label="@string/app_name" 
            android:theme="@style/mystyle">
            
        </activity>
    </application>

</manifest>